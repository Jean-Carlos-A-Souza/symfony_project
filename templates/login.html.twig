 {% block body %}
  {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">

  <h1 class="text-center">Login</h1>

  <!-- Email input -->
  <div class="form-outline mb-4 pt-4">
    <input type="email" id="login_email" class="form-control" id="username" name="_username" value="{{ last_username }}" />
    <label class="form-label login_email" for="login_email">Email address</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" id="login_senha" class="form-control" id="password" name="_password" />
    <label class="form-label login_senha" for="login_senha">Password</label>
  </div>

  <input type="hidden" name="_target_path" value="/logado"/>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
        <label class="form-check-label" for="form1Example3"> Remember me </label>
      </div>
    </div>

    <div class="col">
      <!-- Simple link -->
      <a class="login_reset" href="#">Esqueceu a senha?</a>
    </div>
  </div>

  <!-- Submit button -->
  <button type="submit" id="login_submit" class="btn btn-block login_submit ">Login</button>
</form>
{% endblock %}