<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
       
        <title>Lista de Clientes</title>

   </head>
    <body>
        <h4>{{ title }}</h4>
        <table >
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Mensagem</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                {% for contato in contatos %}
                    <tr {% if loop.index is odd %}{% endif %}>
                        <td>{{contato.id}}</td>
                        <td>{{contato.nome}} {{contato.sobrenome}}</td>
                        <td>{{contato.telefone}}</td>
                        <td>{{contato.email}}</td>
                        <td>{{contato.mensagem}}</td>
                        <td>{{contato.data | date('d/m/Y')}}</td>
                    </tr>
                {% endfor %}
                   </tbody>
            </table>
    </body>
</html>