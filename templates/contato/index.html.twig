{% extends 'index.html.twig' %}

{% block title %}Hello ProdutoController!{% endblock %}

{% block teste %}
<div class="container-lg ">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Gerenciamento de <b>Contatos</b></h2></div>
                    <div class="col-sm-4">
                        <a href="{{path('contato_adicionar')}}"  class="btn btn-outline-success "><i class="fa fa-circle-plus"></i> Adicionar </a>
                        <a href="{{path('pdf')}}" target="_blank" class="btn btn-outline-danger "><i class="fa fa-file-pdf"></i> Baixar Lista </a>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Mensagem</th>
                        <th>Data</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                {% for contato in pagination %}
                    <tr {% if loop.index is odd %}class="color"{% endif %}>
                        <td>{{contato.id}}</td>
                        <td>{{contato.nome}} {{contato.sobrenome}}</td>
                        <td>{{contato.telefone}}</td>
                        <td>{{contato.email}}</td>
                        <td>{{contato.mensagem}}</td>
                        <td>{{contato.data | date('d/m/Y')}}</td>
                        <td>
                            <a class="btn btn-outline-warning btn-floating m-1" title="Edit" href="{{path('contato_editar', {id:contato.id})}}" ><i class="fa fa-pen-to-square"></i></a>
                            <a class="btn btn-outline-danger btn-floating " title="Delete" href="{{path('contato_excluir', {id:contato.id})}}" onclick="return confirm('Confirmar Exclusão !!!! \nEsta acão não podera ser revertida, Tem Certeza ?')" ><i class="fa fa-trash-can"></i></a>
                        </td>
                    </tr>


                {% endfor %}    
                </tbody>
            </table>
            <div class="row">
                <div class="navigation">
                  <h4> {{ knp_pagination_render(pagination) }}</h4>
                </div>
            </div>

        </div>
    </div>
</div> 

<!-- Modal -->

{% endblock %}
