{% extends 'index.html.twig' %}

{% block title %}Hello ProdutoController!{% endblock %}

{% block teste %}
<div class="container-lg ">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Gerenciamento do <b> Dados de Contatos</b></h2></div>
                    <div class="col-sm-4">
                        <a href="{{path('cont_dados_adicionar')}}"  class="btn btn-outline-success "><i class="fa fa-circle-plus"></i> Adicionar </a>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Endereço</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                {% for contato_dados in pagination %}
                    <tr {% if loop.index is odd %}class="color"{% endif %}>
                        <td>{{contato_dados.id}}</td>
                        <td>{{contato_dados.telefone}}</td>
                        <td>{{contato_dados.email}}</td>
                        <td>{{contato_dados.endereco}}</td>
                        <td>
                            <a class="btn btn-outline-warning btn-floating m-1" title="Edit" href="{{path('cont_dados_editar', {id:contato_dados.id})}}" ><i class="fa fa-pen-to-square"></i></a>
                            <a class="btn btn-outline-danger btn-floating " title="Delete" href="{{path('cont_dados_excluir', {id:contato_dados.id})}}" onclick="return confirm('Confirmar Exclusão !!!! \nEsta acão não podera ser revertida, Tem Certeza ?')" ><i class="fa fa-trash-can"></i></a>
                        </td>
                    </tr>


                {% endfor %}    
                </tbody>
            </table>
            <div class="row">
                <div class="navigation">
                  <h4> {{ knp_pagination_render(pagination) }}</h4>
                </div>
            </div>

        </div>
    </div>
</div> 
{% endblock %}
